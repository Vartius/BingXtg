# shellcheck shell=bash
# shellcheck disable=SC2034

# Telegram API Configuration
API_ID=123456
API_HASH=your_telegram_api_hash
FOLDER_ID=1

# BingX API Configuration
APIURL=https://open-api.bingx.com
APIKEY=your_bingx_api_key_here
SECRETKEY=your_bingx_secret_key_here

# Trading Configuration
LEVERAGE=20
SL=-0.5
TP=0.2
START_BALANCE=10.0
MIN_ORDERS_TO_HIGH=20
MAX_PERCENT=0.3

# Django
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Paths (optional, defaults are fine)
# DB_PATH points to the SQLite file used by both Django and the extractors
# MODEL_DIR is where trained transformers models are stored
# SESSION_FILE is the Telethon session file path
# DATA_DIR is where JSON configuration files are stored
DB_PATH=messages.db
MODEL_DIR=ai_model
SESSION_FILE=my_account.session
DATA_DIR=data

# Logging
LOG_LEVEL=INFO

# Redis (for WebSocket channels)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Email settings (optional, for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
